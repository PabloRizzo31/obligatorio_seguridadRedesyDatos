<!-- OpenVpn Rules Custom
ID: 100800 - 100850
    
Nov 10 00:38:33 fosil openvpn[434]: user 'fmorra' authenticated

# Conexion Fallida por error de usuario y/o clave
Nov 10 12:57:33 fosil openvpn[423]: user 'fmorra' could not authenticate.

# Version por syslog de conexion fallida
2024-08-14T14:59:54-03:00 192.168.1.3 openvpn[39692]: user 'fmorra' could not authenticate.

# Conexion exitosa
Nov 10 00:38:34 fosil openvpn[43428]: openvpn server 'ovpns3' user 'fmorra' address '192.168.56.1:60915' - connected

# Desconexion del usuario
Nov 10 00:40:05 fosil openvpn[67808]: openvpn server 'ovpns3' user 'fmorra' address '192.168.56.1:60915' - disconnected

-->

<group name="openvpn,">

<rule id="100801" level="3">
	<if_sid>81800</if_sid>
	<match> - connected</match>
	<description>OpenVPN: Usuario Logueado</description>
        <mitre>
            <id>T1078,T1562.001</id>
        </mitre>
        <group>authentication_success</group>
    </rule>

 <rule id="100802" level="3">
        <if_sid>81800</if_sid>
        <match> - disconnected</match>
        <description>OpenVPN: Usuario Deslogueado</description>
        <mitre>
            <id>T1562.001</id>
        </mitre>
    </rule>

<!-- Conexion Fallida por error de usuario y/o clave -->
<rule id="100803" level="6">
        <if_sid>81800</if_sid>
        <match>could not authenticate</match>
        <description>OpenVPN: Autenticacion fallida para usuario</description>
        <mitre>
            <id>T1110</id>
        </mitre>
    </rule>  
    
 <!-- horarios fuera de oficina -->
    <rule id="100810" level="8">
        <if_sid>100801</if_sid>
        <time>6 pm - 8:30 am</time>        
        <description>OpenVPN: Login exitoso fuera de horario laboral</description>
    </rule>
    
</group>